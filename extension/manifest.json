{
  "manifest_version": 3,
  "name": "Bot Swarm Detector",
  "version": "1.2",
  "description": "Analyzes Reddit threads for coordinated bot networks using AI linguistic patterns and metadata analysis.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [],
  "host_permissions": [
    "https://bot-swarm-detector-extension.onrender.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
