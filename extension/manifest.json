{
  "manifest_version": 3,
  "name": "Bot Swarm Detector",
  "version": "1.1",
  "description": "Analyzes social media threads for coordinated bot networks.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://bot-swarm-detector-extension.onrender.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}