{
  "manifest_version": 3,
  "name": "Bot Swarm Detector",
  "version": "1.3",
  "description": "Analyzes threads on Reddit, Facebook, X (Twitter), and YouTube for coordinated bot networks and misinformation patterns.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [],
  "host_permissions": [
    "http://127.0.0.1/*",
    "http://localhost/*",
    "https://bot-swarm-detector-extension.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.reddit.com/*",
        "*://*.facebook.com/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*",
        "*://*.youtube.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}